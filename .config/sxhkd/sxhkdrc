super + Return
  $TERMINAL

super + a
  dmenu_run

super + b
  pkill -USR1 redshift

super + shift + b
  blueberry

super + c
  $TERMINAL -e wyrd

super + shift + c
  ledger-live-desktop

super + d
  discord

super + shift + d
  signal-desktop

super + e
  $TERMINAL -e nvim

super + shift + e
  $TERMINAL -e neomutt

super + r
  $TERMINAL -e newsboat

super + shift + r
  $TERMINAL -e podboat

super + s
  dmainu

super + shift + s
  passmenu

super + t
  $TERMINAL -e reflex-curses

super + shift + t
  chatty

super + w
  $BROWSER

super + shift + w
  $TERMINAL -e sudo nmtui

Print
  screenshot_select

XF86MonBrightnessDown
  xbacklight -dec 10

XF86MonBrightnessUp
  xbacklight -inc 10

XF86AudioMute
  amixer sset Master toggle

XF86Audio{Raise,Lower}Volume
  amixer sset Master 5%{+,-}

XF86AudioMicMute
  amixer set Capture toggle

XF86AudioPlay
  mpc toggle

XF86AudioStop
  mpc stop

XF86AudioNext
  mpc next

XF86AudioPrev
  mpc prev

super + Prior
  mpc volume +5 && dunstify -h string:x-canonical-private-synchronous:mpd-audio "MPD Notification" "`mpc --format '<b>%title%</b>\nby <i>%artist%</i>\nfrom <i>%album%</i>' current`" -h int:value:$(mpc-volume)

super + Next
  mpc volume -5 && dunstify -h string:x-canonical-private-synchronous:mpd-audio "MPD Notification" "`mpc --format '<b>%title%</b>\nby <i>%artist%</i>\nfrom <i>%album%</i>' current`" -h int:value:$(mpc-volume)
