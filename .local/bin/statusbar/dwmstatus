#!/bin/sh

while true; do
  email   > $HOME/.local/bin/statusbar/email.txt
	updates > $HOME/.local/bin/statusbar/updates.txt
	weather > $HOME/.local/bin/statusbar/weather.txt
	sleep 10m
done &


while true; do
  EMAIL=$(< $HOME/.local/bin/statusbar/email.txt)
	UPDATES=$(< $HOME/.local/bin/statusbar/updates.txt)
	CPU_USAGE=$(cpu_usage)
	CPU_TEMP=$(cpu_temp)
	#GPU_TEMP=$(gpu_temp)
	MEMORY=$(memory)
	STORAGE=$(storage)
	INTERNET=$(internet)
  #BATTERY=$(battery)
	#VOLUME=$(volume)
  WEATHER=$(< $HOME/.local/bin/statusbar/weather.txt)
  DATE_TIME=$(date_time)
 	dwm -s "$EMAIL  $UPDATES  $CPU_USAGE  $CPU_TEMP  $MEMORY  $STORAGE  $INTERNET  $WEATHER  $DATE_TIME "
	sleep 5s
done &
