#!/bin/sh

inputFile="$(echo $1 | sed 's!~!\/home/richard!')"
[ -z "inputFile"  ] && exit
dir="$(dirname $inputFile)"

case "$inputFile" in
  *ms)
    eqn="$(grep "\.EQ" -i $inputFile | head -1)"
    name="$(echo $inputFile | sed 's/\..*//')"
    cd "$dir"
    [ -z "$eqn" ] || {
      groff -e -ms "$inputFile" -Tpdf > "$name.pdf" && exit
    }
    groff -ms "$inputFile" -Tpdf > "$name.pdf"
esac
