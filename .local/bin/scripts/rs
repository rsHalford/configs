#!/bin/sh

## Improvements
# --dry-run argument
# notify-send/dunst progress bar --info=progress2

if df | grep -q "/mnt/data"; then
  case $1 in
    home)
        SOURCE_DIR="$HOME"
        BACKUP_DIR="/mnt/data/home"
        sudo mkdir -p "$BACKUP_DIR"
        echo "Taking a backup of the home directory in the $BACKUP_DIR directory"

        DATETIME="$(date +%F_%H:%M:%S)"
        BACKUP_PATH="$BACKUP_DIR/$DATETIME"
        LATEST_LINK="$BACKUP_DIR/latest"

        EXCLUDE_LIST="$XDG_DATA_HOME/rsync/home-exclude.txt"

        sudo rsync -aAX --delete --info=progress2 --no-inc-recursive --human-readable \
          "$SOURCE_DIR" \
          --link-dest "$LATEST_LINK" \
          --exclude-from="$EXCLUDE_LIST" \
          "$BACKUP_PATH"
        
        sudo rm -rf "$LATEST_LINK"
        sudo ln -s "$BACKUP_PATH" "$LATEST_LINK"

        dunstify "rsync" "Completed backup of $SOURCE_DIR"
    ;;

    root)
        SOURCE_DIR="/"
        BACKUP_DIR="/mnt/data/root"
        sudo mkdir -p "$BACKUP_DIR"
        echo "Taking a backup of the root directory in the $BACKUP_DIR directory"

        DATETIME="$(date +%F_%H:%M:%S)"
        BACKUP_PATH="$BACKUP_DIR/$DATETIME"
        LATEST_LINK="$BACKUP_DIR/latest"

        EXCLUDE_LIST="$XDG_DATA_HOME/rsync/root-exclude.txt"

        sudo rsync -aAX --delete --info=progress2 --no-inc-recursive --human-readable \
          "$SOURCE_DIR" \
          --link-dest "$LATEST_LINK" \
          --exclude-from="$EXCLUDE_LIST" \
          "$BACKUP_PATH"

        sudo rm -rf "$LATEST_LINK"
        sudo ln -s "$BACKUP_PATH" "$LATEST_LINK"

        dunstify "rsync" "Completed backup of $SOURCE_DIR"
    ;;

    *)
      echo "Must provide an argument of home or root"
    ;;
  esac
else
  echo "Need to mount a the backup drive to /mnt/data"
fi
