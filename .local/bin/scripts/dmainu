#!/bin/sh

# The main menu for dmenu

cmds="\
🔍 Search	dmenusearch
😂 Emojis 	dmenuemoji
⚙ Updates	$TERMINAL yay -Syu
📹 Twitch	dmenutwitch
📺 YouTube	subs
🤔 Calculator	dmenucalc
📖 Manual	dmenuman
📸 Screenshot	screenshot_select
🌍 Internet	$TERMINAL -e nmtui
🔒 Password	passmenu"

choice="$(echo "$cmds" | cut -d'	' -f 1 | dmenu -b)" || exit 1

`echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-`
