#!/bin/sh

# The main menu for dmenu

cmds="\
😂 Emojis 	dmenuemoji
⚙ Updates	$TERMINAL yay -Syu
📹 Twitch	dmenustreams
📺 Videos	dmenuyoutube
🤔 Calculator	dmenucalc
📖 Manual	dmenuman
🔍 Search	dmenu_run
🖥 Terminal 	$TERMINAL
🦁 Browser      	$BROWSER
📰 News		$TERMINAL -e newsboat
🌍 Internet	$TERMINAL -e nmtui
🔒 Password	passmenu"

choice="$(echo "$cmds" | cut -d'	' -f 1 | dmenu -b)" || exit 1

`echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-`

done
